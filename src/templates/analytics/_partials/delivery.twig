{# Delivery Tab - Delivery metrics and channel breakdown #}

{# Delivery Stats Grid #}
<div class="lr-unified-cards">
    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.emailsSent,
        description: 'Emails Sent'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.smsSent,
        description: 'SMS Sent'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.totalSent,
        description: 'Total Invitations'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.expired,
        description: 'Expired'|t('campaign-manager'),
        align: 'center',
    } only %}
</div>

{# Two Column Layout - Channel distribution #}
<div class="lr-analytics-charts two-columns">
    <div class="lr-chart-container">
        <h3>{{ 'Channel Distribution'|t('campaign-manager') }}</h3>
        <canvas id="channel-chart"></canvas>
    </div>
    <div class="lr-chart-container">
        <h3>{{ 'Delivery Summary'|t('campaign-manager') }}</h3>
        <div class="lr-table-scroll">
            <table class="data fullwidth">
                <tbody>
                    <tr>
                        <td>{{ 'Email Invitations'|t('campaign-manager') }}</td>
                        <td style="text-align: right;"><strong>{{ summaryStats.emailsSent|number_format }}</strong></td>
                    </tr>
                    <tr>
                        <td>{{ 'SMS Invitations'|t('campaign-manager') }}</td>
                        <td style="text-align: right;"><strong>{{ summaryStats.smsSent|number_format }}</strong></td>
                    </tr>
                    <tr>
                        <td>{{ 'Total Sent'|t('campaign-manager') }}</td>
                        <td style="text-align: right;"><strong>{{ summaryStats.totalSent|number_format }}</strong></td>
                    </tr>
                    <tr>
                        <td>{{ 'Expired (Not Submitted)'|t('campaign-manager') }}</td>
                        <td style="text-align: right;"><strong>{{ summaryStats.expired|number_format }}</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
