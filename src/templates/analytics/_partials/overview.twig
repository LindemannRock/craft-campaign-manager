{# Overview Tab - Summary stats and daily trend chart #}

{# Summary Stats Grid #}
<div class="lr-unified-cards">
    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.totalRecipients,
        description: 'Total Recipients'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.totalSent,
        description: 'Invitations Sent'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.submissions,
        description: 'Form Responses'|t('campaign-manager'),
        align: 'center',
    } only %}

    {% include 'lindemannrock-base/_components/cards/unified-card' with {
        value: summaryStats.conversionRate ~ '%',
        description: 'Conversion Rate'|t('campaign-manager'),
        align: 'center',
    } only %}
</div>

{# Daily Trend Chart #}
<div class="lr-analytics-charts">
    <div class="lr-chart-container full-width">
        <h3>{{ 'Daily Activity'|t('campaign-manager') }}</h3>
        <div class="lr-chart-height-250">
            <canvas id="daily-trend-chart"></canvas>
        </div>
    </div>
</div>

{# Campaign Performance Table #}
<div class="lr-chart-container lr-mt-24">
    <h3>{{ 'Campaign Performance'|t('campaign-manager') }}</h3>
    <div class="lr-table-scroll">
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th>{{ 'Campaign'|t('campaign-manager') }}</th>
                    <th class="lr-text-end">{{ 'Recipients'|t('campaign-manager') }}</th>
                    <th class="lr-text-end">{{ 'Responses'|t('campaign-manager') }}</th>
                    <th class="lr-text-end">{{ 'Conversion Rate'|t('campaign-manager') }}</th>
                </tr>
            </thead>
            <tbody>
                {% if campaignBreakdown|length %}
                    {% for item in campaignBreakdown %}
                        <tr>
                            <td><strong>{{ item.campaignName }}</strong></td>
                            <td class="lr-text-end">{{ item.totalRecipients|number_format }}</td>
                            <td class="lr-text-end">{{ item.submissions|number_format }}</td>
                            <td class="lr-text-end">{{ item.conversionRate }}%</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4" class="light lr-text-center">{{ 'No data available'|t('campaign-manager') }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
